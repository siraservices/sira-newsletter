# AI Provider Configuration
# Options: anthropic, ollama
AI_PROVIDER=anthropic

# Anthropic API Key (required if using anthropic provider)
# Get from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Ollama Configuration (required if using ollama provider)
# Default: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# Search Provider Configuration
# Options: brave, serper
SEARCH_PROVIDER=brave

# Brave Search API Key (required if using brave provider)
# Get from: https://brave.com/search/api (Free tier: 2,000 queries/month)
BRAVE_API_KEY=your_brave_api_key_here

# Serper API Key (alternative to Brave)
# Get from: https://serper.dev
# SERPER_API_KEY=your_serper_api_key_here

# Email Configuration
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Your Newsletter Name

# Optional: Override config.json settings
# NEWSLETTER_TONE=hormozi
# TARGET_WORD_COUNT=900
# SECTIONS_COUNT=4
